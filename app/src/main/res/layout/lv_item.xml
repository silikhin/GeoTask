<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingTop="@dimen/itemTopBottomPadding"
    android:paddingBottom="@dimen/itemTopBottomPadding"
    android:paddingLeft="@dimen/itemLeftRightPadding"
    android:paddingRight="@dimen/itemLeftRightPadding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:textColor="@color/textColor90a"
        android:text="Title"/>

    <TextView
        android:id="@+id/message_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:textColor="@color/textColor54a"
        android:text="Subtitle"/>
</LinearLayout>